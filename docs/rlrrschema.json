{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://paradiddleapp.com/schemas/rlrrschema_v0.7.json",
    "$comment": "TODO - Update to latest, Add optional values here such as MIDI notes etc.",
    "title": "Paradiddle RLRR Schema",
    "description": "Json schema for .rlrr format used in Paradiddle instrument kit and recording save files.",
    "type": "object",
    "required": [
        "version",
        "instruments"
    ],
    "properties": {
        "version": {
            "type": "number"
        },
        "authoringTool": {
          "type": "string"
        },
        "instruments": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Instrument"
            }
        },
        "events": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Event"
            }
        },
        "audioFileData": {
            "$ref": "#/definitions/AudioFileData"
        },
        "recordingMetadata": {
            "$ref": "#/definitions/RecordingMetadata"
        }
    },
    "definitions": {
        "AudioFileData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "path": {
                    "type": "string"
                },
                "calibrationOffset": {
                    "type": "integer"
                }
            },
            "required": [
                "calibrationOffset",
                "path"
            ],
            "title": "AudioFileData"
        },
        "Event": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "vel": {
                    "type": "integer"
                },
                "loc": {
                    "type": "integer"
                },
                "time": {
                    "type": "string"
                }
            },
            "required": [
                "loc",
                "name",
                "time",
                "vel"
            ],
            "title": "Event"
        },
        "Instrument": {
            "type": "object",
            "properties": {
                "DrumName": {
                    "type": "string"
                },
                "Class": {
                    "type": "string"
                },
                "Loc": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "Rot": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "Scale": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "Class",
                "DrumName",
                "Loc",
                "Rot",
                "Scale"
            ],
            "title": "Instrument"
        },
        "RecordingMetadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "coverImagePath": {
                    "type": "string"
                },
                "artist": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "creator": {
                    "type": "string"
                }
            },
            "required": [
                "artist",
                "author",
                "coverImagePath",
                "creator",
                "description",
                "title"
            ],
            "title": "RecordingMetadata"
        }
    }
}
